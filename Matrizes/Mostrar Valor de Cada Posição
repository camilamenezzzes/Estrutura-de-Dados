#Mostrar Valor de Cada Posição

vetor_notas_a = [5.6, 7.9, 8.6]
vetor_notas_b = [5.5, 2.2, 8.7]
vetor_notas_c = [4.4, 9.8, 9.9]

matriz = [vetor_notas_a,
          vetor_notas_b,
          vetor_notas_c]

for l in range(len(matriz)):
  print(matriz[l])

print("")
#ler linhas
for l in range(len(matriz)):
#ler colunas
  for c in range(len(matriz[l])):
    print("O valor da linha", l, "coluna", c, "é:", matriz[l][c])

print(matriz)
